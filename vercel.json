{
  "version": 2,
  "builds": [
    { "src": "api/**/*.go", "use": "@vercel/go" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/static/:path*", "destination": "/public/:path*" },
    { "source": "/convert", "destination": "/api/convert.go" },
    { "source": "/", "destination": "/api/index.go" }
  ]
}
